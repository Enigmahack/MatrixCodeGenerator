{
  "name": "matrix-digital-rain",
  "version": "1.0.0",
  "description": "Matrix Digital Rain Screensaver",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Enigma",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.enigmahack.matrix",
    "productName": "Matrix Code",
    "files": [
      "MatrixCode_v7.7/**/*",
      "main.js"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
